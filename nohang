def print_version():
    # сначала пытаться получ версию прямо из гита  - вариант для неустановленых
    try:
        v = rline1('/etc/nohang/version')
    except FileNotFoundError:
        v = None
    if v is None:
        print('Nohang unknown version')
    else:
        print('Nohang ' + v)
    exit()


